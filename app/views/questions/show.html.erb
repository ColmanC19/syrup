<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @question.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body text:</strong>
  <%= @question.body_text %>
</p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Answer</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= User.find(answer.user_id).name %></td>
        <td><%= answer.body_text %></td>
        <td><%= link_to 'Show', question_answer_path(@question.id, answer.id) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(@question.id, answer.id) %></td>
        <td><%= link_to 'Destroy', question_answer_path(@question.id, answer.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
